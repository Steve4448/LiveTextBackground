<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="steve4448.livetextbackground"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
	        android:name="steve4448.livetextbackground.background.LiveTextBackgroundService"
	        android:enabled="true"
	        android:label="@string/app_name"
	        android:description="@string/app_desc"
	        android:permission="android.permission.BIND_WALLPAPER">
	        <intent-filter>
	            <action android:name="android.service.wallpaper.WallpaperService" />
	        </intent-filter>
	        <meta-data
	            android:name="android.service.wallpaper"
	            android:resource="@xml/livetextbackground">
	        </meta-data>
	    </service>
        <activity
            android:name="steve4448.livetextbackground.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
