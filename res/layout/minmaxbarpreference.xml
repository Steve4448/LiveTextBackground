<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res/steve4448.livetextbackground">

    <TextView
        android:id="@+id/numMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:width="40dp"
        android:gravity="center"
        android:text="@dimen/min_max_bar_default_dp" />

    <TextView
        android:id="@+id/numMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="@+id/minMaxBar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/numMin"
        android:width="40dp"
        android:gravity="center"
        android:text="@dimen/min_max_bar_default_dp" />

    <steve4448.livetextbackground.widget.MinMaxBar
        android:id="@+id/minMaxBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/numMax"
        app:min="@integer/label_settings_text_size_min"
        app:max="@integer/label_settings_text_size_max"
        app:minDefault="@integer/label_settings_text_size_default_min"
        app:maxDefault="@integer/label_settings_text_size_default_max" />

    <TextView
        android:id="@+id/minPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minMaxBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/label_settings_text_minimum_preview" />

    <TextView
        android:id="@+id/maxPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minPreview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/label_settings_text_maximum_preview" />

</RelativeLayout>