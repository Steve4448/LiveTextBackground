<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/minMaxBar"
            android:gravity="center"
            android:text="@string/placeholder_min_max_bar_default_dp"
            android:width="40dp" />

        <TextView
            android:id="@+id/numMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/minMaxBar"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/placeholder_min_max_bar_default_dp"
            android:width="40dp" />

        <steve4448.livetextbackground.widget.MinMaxBar
            android:id="@+id/minMaxBar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/numMax" />
    </RelativeLayout>

</ScrollView>